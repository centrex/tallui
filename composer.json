{
    "name": "centrex/tallui",
    "description": "This is my package tallui",
    "keywords": [
        "centrex",
        "laravel",
        "tallui"
    ],
    "homepage": "https://github.com/centrex/tallui",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "rochi88",
            "email": "raisul.me@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2|^8.3",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "laravel/prompts": "^0|^1",
        "blade-ui-kit/blade-heroicons": "^2.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.5",
        "larastan/larastan": "^2.0",
        "orchestra/testbench": "^9.5",
        "pestphp/pest": "^3.4",
        "pestphp/pest-plugin-livewire": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "rector/rector": "^1.2",
        "spatie/laravel-ray": "^1.26",
        "livewire/livewire": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Centrex\\TallUi\\": "src/",
            "Centrex\\TallUi\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Centrex\\TallUi\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-tallui --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test-coverage": "vendor/bin/pest --coverage",
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse",
        "test:unit": "pest -p",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Centrex\\TallUi\\TallUiServiceProvider"
            ],
            "aliases": {
                "TallUi": "Centrex\\TallUi\\Facades\\TallUi"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
